<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xsi:type="MailApp"
           xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0">
  <Id>00000000-0000-0000-0000-000000000001</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>SmartPGP</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="SmartPGP Mail" />
  <Description DefaultValue="Encrypt and decrypt mail with SmartPGP via localhost helper" />
  <IconUrl DefaultValue="https://localhost/assets/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://localhost/assets/icon-64.png" />
  <SupportUrl DefaultValue="https://localhost/support" />
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets DefaultMinVersion="1.10">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://localhost/taskpane.html" />
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://localhost/taskpane.html" />
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteItem</Permissions>

  <VersionOverrides xsi:type="mailappor:VersionOverrides" Version="1.0">
    <mailappor:Requirements>
      <mailappor:Sets DefaultMinVersion="1.10">
        <mailappor:Set Name="Mailbox" />
      </mailappor:Sets>
    </mailappor:Requirements>
    <mailappor:Hosts>
      <mailappor:Host xsi:type="mailappor:Mailbox">
        <mailappor:DesktopFormFactor>
          <!-- Compose -->
          <mailappor:ExtensionPoint xsi:type="mailappor:MessageComposeCommandSurface">
            <mailappor:OfficeTab id="TabDefault">
              <mailappor:Group id="SmartPgpComposeGroup" label="SmartPGP">
                <mailappor:Control xsi:type="mailappor:Button"
                                   id="EncryptSendButton"
                                   label="Encrypt &amp; Send"
                                   onAction="encryptAndSend"
                                   icon="https://localhost/assets/icon-16.png" />
              </mailappor:Group>
            </mailappor:OfficeTab>
          </mailappor:ExtensionPoint>

          <!-- Read -->
          <mailappor:ExtensionPoint xsi:type="mailappor:MessageReadCommandSurface">
            <mailappor:OfficeTab id="TabDefault">
              <mailappor:Group id="SmartPgpReadGroup" label="SmartPGP">
                <mailappor:Control xsi:type="mailappor:Button"
                                   id="DecryptButton"
                                   label="Decrypt"
                                   onAction="showDecryptPane"
                                   icon="https://localhost/assets/icon-16.png" />
              </mailappor:Group>
            </mailappor:OfficeTab>
          </mailappor:ExtensionPoint>

          <!-- Send event -->
          <mailappor:ExtensionPoint xsi:type="mailappor:MessageSendCommand">
            <mailappor:MessageSendCommands>
              <mailappor:Command id="OnMessageSendHandler"
                                 type="OnMessageSend"
                                 functionName="onMessageSendHandler" />
            </mailappor:MessageSendCommands>
          </mailappor:ExtensionPoint>
        </mailappor:DesktopFormFactor>
      </mailappor:Host>
    </mailappor:Hosts>

    <mailappor:Resources>
      <mailappor:Images>
        <mailappor:Image id="icon16" DefaultValue="https://localhost/assets/icon-16.png" />
        <mailappor:Image id="icon32" DefaultValue="https://localhost/assets/icon-32.png" />
        <mailappor:Image id="icon80" DefaultValue="https://localhost/assets/icon-80.png" />
      </mailappor:Images>
      <mailappor:Urls>
        <mailappor:Url id="functionFile" DefaultValue="https://localhost/functions.html" />
        <mailappor:Url id="taskPaneUrl" DefaultValue="https://localhost/taskpane.html" />
      </mailappor:Urls>
    </mailappor:Resources>
    <mailappor:ExtensionPoint xsi:type="mailappor:LaunchEvent">
      <mailappor:LaunchEvents>
        <mailappor:LaunchEvent Type="OnMessageSend" FunctionName="onMessageSendHandler" />
      </mailappor:LaunchEvents>
      <mailappor:FunctionFile resid="functionFile" />
    </mailappor:ExtensionPoint>
    <mailappor:FunctionFile resid="functionFile" />
  </VersionOverrides>
</OfficeApp>
